# http://www.linuxmanpages.com/man1/screen.1.php
escape 
vbell off
# hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%< %100=%-8=%c:%s"
# hardstatus alwayslastline "%{= wk}[%m/%d %02c:%s] %{LW} %-w%{= wk}%n %t%{-}%+w %=%{Lw}$USER@$HOSTNAME[$LANG] (%l) "
hardstatus alwayslastline "[%Y/%m/%d %02c] %`%-w%{= kw}%n %t%{-}%+w"
startup_message off
defscrollback 3000
# clear background color.
defbce "on"
# shell title
shelltitle '% |zsh'
# terminal
term xterm-color
termcapinfo xterm-color 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
