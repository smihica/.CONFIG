#!/usr/bin/env sh


for f in \
	.bashrc \
	.bash_profile \
	.gitconfig \
	.gitignore \
	.gnupg \
	.ssh \
	.mayu \
	.Xmodmap \
	.msmtprc \
	.Xdefaults \
	.xprofile \
	.xsession \
	.termcap \
	.tmux.conf \
	.mailcap \
	.offlineimaprc \
	.mutt \
	.vim \
	.vimrc \
	.gvimrc 
do

	rm -rf ~/${f}
	ln -s ${PWD}/${f} ~/${f}

done


rm ~/.gitignore
ln -s ${PWD}/global.gitignore ~/.gitignore
rm ~/.gitconfig
ln -s ${PWD}/global.gitconfig ~/.gitconfig
